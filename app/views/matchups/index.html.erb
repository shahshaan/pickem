



<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4"><h1>This Week's Matchups</h1></div>
  <div class="col-md-4"></div>
 
</div>

<div class="row teams-row">
   <div class="col-md-2"></div> 
  <div class="col-md-4 team1"><button type="button" class="btn btn-info mrbutton">Miami Heat</button><span>(-5)</span></div>
  <div class="col-md-1 vs"><h3>VS</h3></div>
  <div class="col-md-4 team2"><button type="button" class="btn btn-info mrbutton">Minnesota TimberWolves</button> <span>(+5)</span></div>
 <div class="col-md-2"></div> 
</div>



  <tbody>
    <% @matchups.each do |matchup| %>
      <tr>
        <td><%= matchup.team1_name %></td>
        <td><%= matchup.team2_name %></td>
        <td><%= matchup.team1_spread %></td>
        <td><%= matchup.team2_spread %></td>
        <td><%= matchup.start_time %></td>
        <td><%= matchup.team1_score %></td>
        <td><%= matchup.team2_score %></td>
        <td><%= matchup.week %></td>
        <td><%= link_to 'Show', matchup %></td>
        <td><%= link_to 'Edit', edit_matchup_path(matchup) %></td>
        <td><%= link_to 'Destroy', matchup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

