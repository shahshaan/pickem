<h1>Listing matchups</h1>

<% @weeks.each do |week| %>
  <%= week.title %>
    <% week.matchups.each do |matchup| %>
      <p>
        <% if matchup.game_over? %>
          <%= matchup.result('winner').name %>
          defeated
          <%= matchup.result('loser').name %>
        <% else %>
          <%= link_to matchup.team(1).name, create_pick_path(matchup.id, matchup.team(1).id) %>
          <%= matchup.team1_spread %>
          vs.
          <%= link_to matchup.team(2).name, create_pick_path(matchup.id, matchup.team(2).id) %>
          <%= matchup.team2_spread %>
        <% end -%>
      </p>
    <% end %>
<% end %>



<table>
  <thead>
    <tr>
      <th>Team1 name</th>
      <th>Team2 name</th>
      <th>Team1 spread</th>
      <th>Team2 spread</th>
      <th>Start time</th>
      <th>Team1 score</th>
      <th>Team2 score</th>
      <th>Week</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matchups.each do |matchup| %>
      <tr>
        <td><%#= matchup.team1_name %></td>
        <td><%#= matchup.team2_name %></td>
        <td><%#= matchup.team1_spread %></td>
        <td><%#= matchup.team2_spread %></td>
        <td><%#= matchup.start_time %></td>
        <td><%#= matchup.team1_score %></td>
        <td><%#= matchup.team2_score %></td>
        <td><%#= matchup.week %></td>
        <td><%#= link_to 'Show', matchup %></td>
        <td><%#= link_to 'Edit', edit_matchup_path(matchup) %></td>
        <td><%#= link_to 'Destroy', matchup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Matchup', new_matchup_path %>
